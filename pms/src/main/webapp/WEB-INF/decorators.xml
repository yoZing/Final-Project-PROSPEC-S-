<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/decorator">

	<decorator name="main" page="main_decorator.jsp">
		<pattern>*</pattern>
	</decorator>
	<decorator name="admin" page="admin_decorator.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
	
	<decorator name="openWindow" page="open_decorator.jsp">
		<pattern>/index</pattern>
		<pattern>*.open</pattern>
	</decorator>
	
	<decorator name="plain" page="plain_decorator.jsp">
		<pattern>/common/*</pattern>	
		<pattern>/security/systemLock</pattern>	
	</decorator>

	<excludes>
		<pattern>*/modal/*</pattern>
		<pattern>/resources/*</pattern>
	</excludes>	
</decorators>	
